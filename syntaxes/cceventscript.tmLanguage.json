{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CC EventScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#charnames"
		},
		{
			"include": "#formatting"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.flowcontrol.cceventscript",
					"match": "(?i)^\\s*(if|else|endif)\\b"
				}, {
					"name": "keyword.set.cceventscript",
					"match": "^(?i)^\\s*set\\b"
				}, {
					"name": "keyword.import.cceventscript",
					"match": "(?i)^\\s*(import|include)\\b"
				}, {
					"name": "constant.title.cceventscript",
					"match": "^\\s*==\\s*\\S*\\s*== *$"
				}, {
					"name": "keyword.type",
					"match": "^type(?:\\.\\S+)?\\s*(?=:\\s*.+)"
				},{
					"name": "keyword.message.cceventscript",
					"match": "(?<=^\\s*\\S+\\s*)>\\s*[A-Z\\d_]+[\\s:](?=(.+))"
				}, {
					"name": "comment.line",
					"match": "(?<!\\\\)(?:#|\/\/).*"
				}, {
					"name": "keyword.eventHeader.cceventscript",
					"match": "(?i)^\\s*(?:message|event)\\s+\\d+:?\\s*$"
				}, {
					"name": "variable.cceventscript",
					"match": "(?i)(?<=^\\s*set\\s+)\\S+"
				}, {
					"name": "keyword.property.cceventscript",
					"match": "^\\s*(frequency|repeat|eventType|loopCount|condition)\\s*(?=:)"
				}
			]
		},

		"charnames": {
			"patterns": [
				{
					"name": "constant.charname.cceventscript",
					"match": "(?i)^\\s*\\S+(?=\\s*>\\s*[A-Z_]+)"
				}
			]
		},

		"formatting": {
			"patterns": [
				{
					"name": "variable.formatting.cceventscript",
					"match": "\\\\(\\.|!|v\\[[\\w+-.]+\\]|i\\[[\\w+-.]+\\]|s\\[\\d\\])"
				},
				{
					"name": "variable.formatting.cceventscript.color.white",
					"match": "\\\\c\\[0\\]"
				},
				{
					"name": "variable.formatting.cceventscript.color.red",
					"match": "\\\\c\\[1\\]"
				},
				{
					"name": "variable.formatting.cceventscript.color.green",
					"match": "\\\\c\\[2\\]"
				},
				{
					"name": "variable.formatting.cceventscript.color.yellow",
					"match": "\\\\c\\[3\\]"
				},
				{
					"name": "variable.formatting.cceventscript.color.gray",
					"match": "\\\\c\\[4\\]"
				},
				{
					"name": "variable.formatting.cceventscript.color.orange",
					"match": "\\\\c\\[5\\]"
				},{
					"name": "variable.formatting.cceventscript.color",
					"match": "\\\\c\\[\\d\\]"
				}
			]
		}
	},
	"scopeName": "source.cc-eventscript"
}