{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CC EventScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cceventscript",
					"match": "(?i)^\\s*(if|else|endif)\\b"
				},{
					"name": "comment.line",
					"match": "^(?://|#).*"
				}
			]
		}
	},
	"scopeName": "source.cc-eventscript"
}