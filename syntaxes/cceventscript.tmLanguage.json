{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CC EventScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.cceventscript",
				"match": "\\b(if|else|endif)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.cceventscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cceventscript",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.cc-eventscript"
}