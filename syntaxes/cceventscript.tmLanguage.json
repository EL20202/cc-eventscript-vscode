{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CC EventScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cceventscript",
					"match": "(?i)^\\s*(if|else|endif)\\b"
				},
				{
					"name": "constant.title.cceventscript",
					"match": "^\\s*==\\s*\\S*\\s*== *$"
				},{
					"name": "keyword.message.cceventscript",
					"match": "^\\s*\\S+\\s*>\\s*[A-Z_]+[\\s:](?=(.+))"
				},
				{
					"name": "comment.line",
					"match": "^(?://|#).*"
				},{
					"name": "keyword.eventHeader.cceventscript",
					"match": "(?i)^\\s*(?:message|event)\\s+\\d+\\s*$"
				}
			]
		}
	},
	"scopeName": "source.cc-eventscript"
}